---
import { ViewTransitions } from 'astro:transitions';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Elektrikářské a solární instalační služby" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <script src="https://unpkg.com/htmx.org@1.9.5"></script>
  </head>
  <body class="bg-gray-100">
    <header>
      <div class="bg-white py-4">
        <div class="container mx-auto px-4">
          <a href="/" class="flex items-center">
            <img src="/images/logofhj_small.jpg" alt="FHJ Building" class="h-14 w-auto">
          </a>
        </div>
      </div>
      <nav class="bg-blue-700 text-white p-4">
        <div class="container mx-auto">
          <ul class="flex justify-center space-x-8">
            <li><a href="/" class="hover:text-blue-200">Domů</a></li>
            <li><a href="/services" class="hover:text-blue-200">Služby</a></li>
            <li><a href="/projects" class="hover:text-blue-200">Projekty</a></li>
            <li><a href="/contact" class="hover:text-blue-200">Kontakt</a></li>
          </ul>
        </div>
      </nav>
    </header>
    <main class="container mx-auto mt-8 p-4">
      <slot />
    </main>
    <footer class="bg-gray-800 text-white p-4 mt-8">
      <div class="container mx-auto text-center">
        <p>&copy; 2025 FHJ-building. Všechna práva vyhrazena.</p>
      </div>
    </footer>
  </body>
</html>
