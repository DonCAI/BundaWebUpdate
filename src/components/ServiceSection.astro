---
interface Props {
  title: string;
  icon: string;
}

const { title, icon } = Astro.props;
---

<div class="bg-white p-8 rounded-lg shadow-md flex flex-col">
  <div class="flex items-center mb-6">
    <div class="bg-blue-500 text-white rounded-full w-16 h-16 flex items-center justify-center mr-4 text-3xl">
      {icon}
    </div>
    <h2 class="text-3xl font-bold text-blue-800">{title}</h2>
  </div>
  <div class="flex-grow">
    <slot />
  </div>
</div>